{
  "name": "thread-sleep-compat",
  "version": "1.1.1",
  "description": "thread-sleep the runs on multiple versions of node",
  "keywords": [
    "thread-sleep",
    "thread",
    "sleep"
  ],
  "homepage": "https://github.com/kmalakoff/thread-sleep-compat",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/thread-sleep-compat.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "source": "src/index.ts",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "assets",
    "scripts/postinstall.cjs"
  ],
  "scripts": {
    "build": "tsds build",
    "build-binaries": "node scripts/build-binaries.ts",
    "format": "tsds format",
    "postinstall": "node scripts/postinstall.cjs",
    "prepublishOnly": "tsds validate",
    "pretest": "node scripts/ensure-test-binaries.ts",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "exit-compat": "^1.0.0",
    "mkdirp-classic": "^0.5.3",
    "thread-sleep": "^2.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "cmake-js": "^7.4.0",
    "cross-spawn-cb": "^2.4.10",
    "fast-extract": "^1.8.13",
    "nan": "2.24.0",
    "node-version-use": "^2.1.3",
    "prebuild": "^13.0.1",
    "queue-cb": "^1.6.1",
    "ts-dev-stack": "^1.21.3",
    "tsds-config": "^0.2.0"
  },
  "engines": {
    "node": ">=0.8"
  },
  "binaryVersion": "1.0.0"
}
